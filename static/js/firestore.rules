rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // single-doc style (if you still use it anywhere)
    match /itineraries/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    // multi-doc style (what we use now)
    match /users/{uid}/itineraries/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
